<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:columnCount="4"
    android:rowCount="9"
    tools:context=".BeKindMainActivity">

    <!--Row One-->
    <TextView android:id="@+id/txt_current_progress"
        android:text="0 of 0 positive moments"
        style="@style/TitlePosMomentFont"
        android:layout_row="0"
        android:layout_columnSpan="4" />
    <!--End Row One-->

    <!--Row Two-->
    <TextView android:id="@+id/text_countdown"
        android:text="00:00:00"
        style="@style/CountdownFont"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4" />
    <!--End Row Two-->

    <!--Row Three-->
    <TextView android:id="@+id/text_interval_goal"
        android:text="@string/text_remind_interval"
        style="@style/LabelFont"
        android:layout_row="2"
        android:layout_column="0" />

    <Button android:id="@+id/btn_interval_minus"
        android:text="-"
        style="@style/BtnGoalAdj"
        android:layout_row="2"
        android:layout_column="1" />

    <TextView android:id="@+id/text_interval_number"
        android:text="0"
        style="@style/IncrementFont"
        android:layout_row="2"
        android:layout_column="2" />

    <Button android:id="@+id/btn_interval_plus"
        android:text="+"
        style="@style/BtnGoalAdj"
        android:layout_row="2"
        android:layout_column="3" />
    <!--End Row Three-->

    <!--Row Four-->
    <TextView android:id="@+id/text_break_goal"
        android:text="@string/text_break_goal"
        style="@style/LabelFont"
        android:layout_row="3"
        android:layout_column="0" />

    <Button android:id="@+id/btn_goal_minus"
        android:text="-"
        style="@style/BtnGoalAdj"
        android:layout_row="3"
        android:layout_column="1" />

    <TextView android:id="@+id/text_break_number"
        android:text="0"
        style="@style/IncrementFont"
        android:layout_row="3"
        android:layout_column="2" />

    <Button android:id="@+id/btn_goal_plus"
        android:text="+"
        style="@style/BtnGoalAdj"
        android:layout_row="3"
        android:layout_column="3" />
    <!--End Row Five-->

    <!--Row Six-->
    <TextView android:id="@+id/text_break_timer"
        android:text="@string/text_break_timer"
        style="@style/LabelFont"
        android:layout_row="5"
        android:layout_column="0" />

    <Button android:id="@+id/btn_timer_minus"
        android:text="-"
        style="@style/BtnGoalAdj"
        android:layout_row="5"
        android:layout_column="1" />

    <TextView android:id="@+id/text_timer_number"
        android:text="0"
        style="@style/IncrementFont"
        android:layout_row="5"
        android:layout_column="2" />

    <Button android:id="@+id/btn_timer_plus"
        android:text="+"
        style="@style/BtnGoalAdj"
        android:layout_row="5"
        android:layout_column="3" />

    <!--End Row Six-->

    <!--Row Seven-->
    <com.flemwad.bekindremind.EditTextBackEvent
        android:id="@+id/etxt_comp_msg"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Completion Message"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="4"/>

    <Button android:id="@+id/btn_comp_done"
        android:text="DONE"
        android:textSize="10dp"
        style="@style/BtnDoneComp"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="4"/>
    <!--End Row Seven-->

    <!--Row Eight-->
    <Button android:id="@+id/btn_start"
        android:text="GO"
        style="@style/BtnGo"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="4"/>
    <!--End Row Eight-->

    <!--Row Nine-->
    <Button android:id="@+id/btn_close"
        android:text="@string/btn_close"
        style="@style/BtnClose"
        android:maxLength="20"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="4"/>
    <!--End Row Nine-->


</GridLayout>
